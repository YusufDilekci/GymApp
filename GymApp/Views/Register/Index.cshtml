@model Member
@{
    Layout = null;
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<style>

    body {
        font-family: sans-serif;
        background-image: url("/images/loginAndRegister.jpg");
    }

    .emptyArea {
        width: 100%;
        height: 100px;
    }


</style>

<div class="emptyArea"></div>
<center>
    <h1 style="color: #62c8d2;">Sign Up</h1>

    @using (Html.BeginForm("Index", "Register", FormMethod.Post))
    {

      <div class="form-row">
          <div class="col-md-6 mb-3">
                <label for="validationCustom01" class="form-label">NameSurname</label>
                @Html.TextBoxFor(i => i.MemberNameSurname, new{ @class="form-control"})
                @Html.ValidationMessageFor(i => i.MemberNameSurname, "", new{@class = "text-danger"})

          </div>
          <div class="col-md-6 mb-3">
                <label for="validationCustomUsername" class="form-label">Username</label>
                @Html.TextBoxFor(i => i.MemberUserName, new{ @class="form-control"})
                @Html.ValidationMessageFor(i => i.MemberUserName, "", new{@class = "text-danger"})
          </div>
      </div>
      <div class="form-row">
          <div class="form-group col-md-6">
                <label for="validationCustom03" class="form-label">Email</label>
                @Html.TextBoxFor(i => i.MemberEmail, new{ @class="form-control"})
                @Html.ValidationMessageFor(i => i.MemberEmail, "", new{@class = "text-danger"})

          </div>
          <div class="form-group col-md-6">
                <label for="validationCustom03" class="form-label">Password</label>
                @Html.TextBoxFor(i => i.MemberPassword, new{ @class="form-control"})
                @Html.ValidationMessageFor(i => i.MemberPassword, "", new{@class = "text-danger"})
          </div>
       </div>
      <div class="col-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
                Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                You must agree before submitting.
                </div>
            </div>
      </div>
      <div class="col-12">
        <button class="btn btn-primary" type="submit">Create New Account</button>
      </div>
    }
</center>


