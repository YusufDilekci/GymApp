@model BranchDescriptionImageViewModel
@{
}

<style>
    body {
        font-family: sans-serif;
    }

    .emptyforKickbox {
        margin-bottom: 100px;
    }

    h1 {
        text-align: center;
    }

    .col > img {
        border-radius: 20%;
        float: left;
        margin-right: 50px;
        margin-bottom: 20px;
    }

    .kickboxParag {
        margin-top: 100px;
    }

    .kickboxImg2 {
        float: right;
        border-radius: 20%;
        margin-left: 50px;
        margin-bottom: 20px;
    }

    p {
        font-size: large;
    }
</style>


<div class="emptyforKickbox"></div>
<div class="container">
    <h1 style="color: #62c8d2;">About @Model.BranchName</h1>
    <hr>

    @for (int i=0; i<Model.BranchDescriptions.Count; i++)
    {
        <div class="row">
            <div class="col">

                <img src="/images/@Model.BranchImages[i]" style="width: 350px; height: 300px;">
                <div class="kickboxParag">
                    <p>
                        @Model.BranchDescriptions[i]
                    </p>
                </div>
            </div>
            <hr>
        </div>
    }


    
</div>
   
