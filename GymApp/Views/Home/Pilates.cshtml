@model CategoryDescriptionImageViewModel

@{
}
<style>
    body {
        font-family: sans-serif;
    }

    .emptyforPilates {
        margin-bottom: 100px;
    }

    h1 {
        text-align: center;
    }

    .col > img {
        border-radius: 20%;
        float: left;
        margin-right: 50px;
        margin-bottom: 20px;
    }

    .pilatesParag {
        margin-top: 100px;
    }

    .pilatesImg2 {
        float: right;
        border-radius: 20%;
        margin-left: 50px;
        margin-bottom: 20px;
    }

    p {
        font-size: large;
    }
</style>

<div class="emptyforPilates"></div>
<div class="container">
    <h1 style="color: #62c8d2;">About @Model.CategoryName</h1>
    <hr>
    @for (int i=0; i<Model.CategoryDescriptions.Count; i++)
    {
        <div class="row">
            <div class="col">

                <img src="/images/@Model.CategoryImages[i]" style="width: 350px; height: 300px;">
                <div class="pilatesParag">
                    <p>
                        @Model.CategoryDescriptions[i]
                    </p>
                </div>
            </div>
            <hr>
        </div>
    }

</div>