<h1 id="index-h1">Select The Best Sport For You</h1>
<section id="cardPart">

    <div class="container">

        <div class="row">
            
      
            @for (int i = 0; i < 3; i++)
            {
                <div class="col-sm-12 col-lg-4">
                    <div class="card border-info" style="width: 18rem; height: 400px;">
                        <img src="/images/@Model[i].BranchImages[i]" class="card-img-top" style="height: 200px;">
                        <div class="card-body">
                            <h5 class="card-title">@Model[i].BranchName</h5>
                            <p class="card-text">@Model[i].BranchInfo</p>
                            <a href="/@Model[i].BranchName?BranchId=@Model[i].BranchId" class="btn btn-primary">More Information</a>
                        </div>
                    </div>
                </div>
            }

        </div>
            
        <div class="row">
            @for (int i = 3; i < 5; i++)
            {
                <div class="col-sm-12 col-lg-6">
                    <div class="card border-info" style="width: 18rem; height: 400px;">
                        <img src="/images/@Model[i].BranchImages[0]" class="card-img-top" style="height: 200px;">
                        <div class="card-body">
                            <h5 class="card-title">@Model[i].BranchName</h5>
                            <p class="card-text">@Model[i].BranchInfo</p>
                            <a href="/@Model[i].BranchName?BranchId=@Model[i].BranchId" class="btn btn-primary">More Information</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


    



